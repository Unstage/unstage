{
  "extends": "@unstage/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*.tsx"],
      "@hooks/*": ["./src/hooks/*.tsx"],
      "@src/*": ["./src/*.tsx"],
      "@store/*": ["./src/store/*.ts"],
      "@utils/*": ["./src/utils/*.ts"],
      "@schemas/*": ["../api/src/schemas/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "../api/**/*"]
}

{
  "name": "@unstage/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "dotenvx run -f .env.local -- tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "docker:build": "docker build -t unstage-api .",
    "docker:run": "docker run -p 8787:8787 unstage-api",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "type-check": "tsc --noEmit"
  },
  "exports": {
    "./trpc": "./src/trpc/init.ts",
    "./routers": "./src/trpc/routers/_app.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.23",
    "@hono/node-server": "^1.18.2",
    "@hono/trpc-server": "^0.4.0",
    "@hono/zod-openapi": "^1.1.0",
    "@hono/zod-validator": "^0.7.2",
    "@scalar/hono-api-reference": "^0.9.13",
    "@trpc/server": "^11.4.4",
    "@unstage/auth": "workspace:*",
    "@unstage/cache": "workspace:*",
    "@unstage/db": "workspace:*",
    "@unstage/email": "workspace:*",
    "@unstage/encryption": "workspace:*",
    "ai": "^5.0.8",
    "hono": "^4.9.0",
    "lru-cache": "^11.1.0",
    "pino": "^9.8.0",
    "stripe": "^18.4.0",
    "superjson": "^2.2.2",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@dotenvx/dotenvx": "^1.48.4",
    "@types/node": "^24.2.1",
    "@unstage/typescript-config": "workspace:*",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.14.0"
}

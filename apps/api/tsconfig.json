{
  "extends": "@unstage/typescript-config/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@schemas/*": ["./src/schemas/*"]
    }
  },
  "include": ["src/**/*", "../../packages/cache/src/user-cache.ts"],
  "exclude": ["node_modules", "dist"]
}

{
  "name": "@unstage/db",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema.ts",
    "./queries/*": "./src/queries/*.ts",
    "./utils/*": "./src/utils/*.ts"
  },
  "scripts": {
    "db:push": "drizzle-kit push --config=./drizzle.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit generate",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "postgres": "^3.4.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/node": "^24.10.0",
    "@unstage/typescript-config": "workspace:*",
    "drizzle-kit": "^0.31.6",
    "typescript": "^5.9.3"
  }
}

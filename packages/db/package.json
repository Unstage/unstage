{
  "name": "@unstage/db",
  "version": "0.0.1",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema.ts",
    "./queries/*": "./src/queries/*.ts"
  },
  "scripts": {
    "db:push": "drizzle-kit push --config=./drizzle.config.ts",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit generate",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/node": "^24.2.1",
    "@unstage/typescript-config": "workspace:*",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.9.2"
  }
}
